{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": { "@/*": ["./src/*"] }
  },
  "exclude": ["node_modules"]
}
